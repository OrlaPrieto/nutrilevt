---
import '../styles/global.css';
import FloatingCTA from '../components/FloatingCTA.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon2.png" />
    <meta name="description" content="Nutrilev Especializada - Nutrición Clínica y Psiconutrición en Chihuahua. Planes personalizados, control de peso, diabetes y recomposición corporal con tecnología InBody 270." />
    <meta name="keywords" content="nutriologa chihuahua, nutricion clinica, psiconutricion, inbody 270 chihuahua, control de peso chihuahua, nutricion deportiva, lactancia materna" />
    <link rel="canonical" href="https://nutrilevespecializada.com" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://nutrilevespecializada.com" />
    <meta property="og:title" content={`${title} | Nutrilev Especializada`} />
    <meta property="og:description" content="Atención nutricional especializada con enfoque clínico y humano en Chihuahua. Transforma tu salud con planes personalizados." />
    <meta property="og:image" content="/assets/logo-final.jpg" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://nutrilevespecializada.com" />
    <meta property="twitter:title" content={`${title} | Nutrilev Especializada`} />
    <meta property="twitter:description" content="Atención nutricional especializada con enfoque clínico y humano en Chihuahua." />
    <meta property="twitter:image" content="/assets/logo-final.jpg" />

    <meta name="generator" content={Astro.generator} />
    <title>{title} | Nutrilev Especializada - Nutrición en Chihuahua</title>
    
    <!-- Local Business Schema -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Nutritionist",
        "name": "Nutrilev Especializada",
        "image": "https://nutrilevespecializada.com/assets/logo-final.jpg",
        "url": "https://nutrilevespecializada.com",
        "telephone": "+526143958598",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "C. Presa del Rejón 11306-1, Lomas del Valle",
          "addressLocality": "Chihuahua",
          "addressRegion": "CHIH",
          "postalCode": "31217",
          "addressCountry": "MX"
        },
        "geo": {
          "@type": "GeoCoordinates",
          "latitude": 28.62717,
          "longitude": -106.0809239
        },
        "openingHoursSpecification": [
          {
            "@type": "OpeningHoursSpecification",
            "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
            "opens": "09:00",
            "closes": "18:30"
          },
          {
            "@type": "OpeningHoursSpecification",
            "dayOfWeek": "Saturday",
            "opens": "08:00",
            "closes": "17:00"
          }
        ],
        "sameAs": [
          "https://www.facebook.com/profile.php?id=100064033451986",
          "https://www.instagram.com/nutrilev_especializada"
        ]
      }
    </script>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=Playfair+Display:ital,wght@0,400;0,600;0,700;1,400&display=swap" rel="stylesheet">
  </head>
  <body class="bg-[#FAF9F6] text-slate-800 font-['Inter',sans-serif]">
    <slot />
    <FloatingCTA />
  </body>
</html>

<style is:global>
  html {
    scroll-behavior: smooth;
    scroll-padding-top: 130px;
  }

  @media (min-width: 768px) {
    html {
      scroll-padding-top: 180px;
    }
  }

  h1, h2, h3, h4, h5, h6 {
    font-family: 'Playfair Display', serif;
  }
</style>
