      </p>
    </div>

    <div class="grid lg:grid-cols-2 gap-12 xl:gap-20">
      {modes.map(mode => (
        <div class="group relative">
          <!-- Main Card -->
          <div class={`relative h-full rounded-[3rem] p-8 sm:p-12 bg-gradient-to-br ${mode.theme} border border-pink-100/50 transition-all duration-700 group-hover:shadow-[0_40px_80px_-15px_rgba(255,182,193,0.3)] group-hover:-translate-y-2 overflow-hidden`}>
            
            <!-- Image Container -->
            <div class="relative h-64 sm:h-80 rounded-[2rem] overflow-hidden mb-12 shadow-2xl">
              <img 
                src={mode.image} 
                alt={mode.title} 
                class="w-full h-full object-cover transition-transform duration-1000 group-hover:scale-110"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent"></div>
              
              <!-- Floating Icon -->
              <div class="absolute bottom-6 left-6 w-16 h-16 bg-white/90 backdrop-blur-md rounded-2xl flex items-center justify-center text-3xl shadow-lg border border-white/20">
                {mode.icon}
              </div>
            </div>

            <div class="relative z-10">
              <h3 class="text-3xl sm:text-4xl font-bold text-slate-900 mb-6">{mode.title}</h3>
              <p class="text-lg text-slate-600 leading-relaxed mb-10 min-h-[4.5rem]">
                {mode.description}
              </p>
              
              <ul class="space-y-5 mb-14">
                {mode.features.map(feature => (
                  <li class="flex items-center gap-4 text-slate-700 font-medium">
                    <div class="w-7 h-7 rounded-full bg-white flex items-center justify-center flex-shrink-0 shadow-sm border border-pink-100 group-hover:bg-[#D81B60] group-hover:border-[#D81B60] transition-colors duration-500">
                      <svg class="w-4 h-4 text-[#D81B60] group-hover:text-white transition-colors duration-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7" />
                      </svg>
                    </div>
                    <span>{feature}</span>
                  </li>
                ))}
              </ul>

              <a 
                href="#booking" 
                class="inline-flex items-center gap-4 py-4 px-10 rounded-2xl bg-slate-900 text-white font-bold text-lg hover:bg-[#D81B60] transition-all duration-300 shadow-xl shadow-slate-200 hover:shadow-[#D81B60]/20"
              >
                Agendar ahora
                <span class="group-hover:translate-x-1 transition-transform">‚Üí</span>
